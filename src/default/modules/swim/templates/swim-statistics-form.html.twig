{% if form.swim_id %}
    <h1> Submit stats for {{ form.swim_title }} </h1>
    <div class="centerDateTime">{{ form.swim_date }}</div>

    {{ form.form_build_id }}
    {{ form.form_token }}
    {{ form.form_id }}

    <div class="swim-signup-row">
        <div class="swim-signup-column left">
            {{ form.pace }}
        </div>
        <div class="swim-signup-column left">
            {{ form.distance }}
        </div>

        <div class="actions swim-signup-column left">
            {{ form.actions }}
        </div>

        {{ form.swim_id }}
    </div>
{% endif %}

<table class="table table-striped swimmers">
    <thead>
    <tr>
    <th scope="col">Swim Title</th>
    <th scope="col">Date</th>
    <th scope="col">Pace</th>
    <th scope="col">Distance</th>

    </tr>
    </thead>
    <tbody id="stats">
    {% for stat in form.data %}
        {% if stat and stat.date %}
            <tr>
                <td>{{ stat.swim_name }}</td>
                <td>{{ stat.date }}</td>
                <td>{{ stat.pace }}</td>
                <td>{{ stat.distance }}</td>
            </tr>
        {% endif %}
    {% endfor %}
    </tbody>
</table>

{% if form.average_pace %}
    Average pace: {{ form.average_pace }}
    Average distance: {{ form.average_distance }}
{% else %}
    No statistics availiable.
{% endif %}
